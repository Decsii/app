<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.balint.login.RegActivity"
    android:id="@+id/Reg">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:weightSum="1"
        android:id="@+id/idont">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/regisztracio"
            android:id="@+id/textView4"
            android:layout_weight="0.07"
            android:textColor="@color/sinch_purple"
            android:textSize="30sp"
            android:autoText="false"
            android:textAlignment="center" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/sinch_purple"
            android:text="@string/felhasznalonev"
            android:id="@+id/textView6"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="30dp" />


        <EditText
            android:id="@+id/ruserText"
            android:layout_width="280dp"
            android:layout_height="35dp"
            android:layout_marginTop="8dp"
            android:inputType="text"
            android:textSize="12sp"
            android:padding="10dp"
            android:textColor="@color/sinch_purple"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/inputbox"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:paddingLeft="10dp">
        </EditText>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/jelszo"
            android:id="@+id/nameV"
            android:textColor="@color/sinch_purple"
            android:layout_gravity="center_horizontal" />

        <EditText
            android:id="@+id/rpasswordText"
            android:layout_width="280dp"
            android:layout_height="35dp"
            android:layout_marginTop="8dp"
            android:inputType="text"
            android:textSize="12sp"
            android:padding="10dp"
            android:textColor="@color/sinch_purple"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/inputbox"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:paddingLeft="10dp">
        </EditText>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/jelszo2"
            android:id="@+id/nameV2"
            android:textColor="@color/sinch_purple"
            android:layout_gravity="center_horizontal" />

        <EditText
            android:id="@+id/rrpasswordText"
            android:layout_width="280dp"
            android:layout_height="35dp"
            android:layout_marginTop="8dp"
            android:inputType="text"
            android:textSize="12sp"
            android:padding="10dp"
            android:textColor="@color/sinch_purple"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/inputbox"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:paddingLeft="10dp">
        </EditText>

        <Button
            android:id="@+id/registB"
            android:layout_width="115dp"
            android:layout_height="40dp"
            android:layout_gravity="center_horizontal"
            android:text="@string/regisztralok"
            android:textSize="15sp"
            android:textColor="#fff"
            android:background="@drawable/button_signup"
            android:layout_marginTop="10dp" />

        <Button
            android:id="@+id/rbackB"
            android:layout_width="115dp"
            android:layout_height="40dp"
            android:layout_gravity="center_horizontal"
            android:text="@string/vissza"
            android:textSize="15sp"
            android:textColor="#fff"
            android:background="@drawable/button_signup"
            android:layout_marginTop="10dp" />

    </LinearLayout>
</RelativeLayout>
